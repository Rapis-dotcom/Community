<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>画像編集フォーム</h1>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @post do |f| %>
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        <h4>本文</h4>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
      <% end %>
      <%= link_to "削除",post_path(@post),method: :delete, class:"btn btn-sm btn-success" %>
    </div>
  </div>
</div>