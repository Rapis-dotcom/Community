<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% posts.each do |post| %>
    <tr>
      <td>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image(100,100) %>
        <% end %>
      </td>
      <td>
        <p>投稿ユーザー画像<%= image_tag post.user.get_profile_image(100,100) %></p>
      </td>
      <td>
        <p>タイトル：<%= link_to post.title, post_path(post) %></p>
      </td>
      <td>
        <p>本文：<%= post.body %></p>
      </td>
      <td>
        <p>ユーザーネーム：<%= post.user.name %></p>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%#= paginate posts %>