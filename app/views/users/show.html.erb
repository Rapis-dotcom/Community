<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
          <tr>
            <th>氏名</th>
            <th><%= @user.name %></th>
          </tr>
          
        </tbody>
      </table>

      <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  </div>
</div>